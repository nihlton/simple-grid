{
  "name": "simpl-grid",
  "version": "2.0.14",
  "description": "simple responsive flexbox grid",
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "files": [
    "dist",
    "vars.ts",
    "vars.js",
    "vars.d.ts"
  ],
  "main": "dist/grid.css",
  "style": "dist/grid.css",
  "scripts": {
    "copy-src": "node -e \"require('fs').cpSync('src/', 'dist/', { recursive: true });\"",
    "build:vars": "tsx scripts/build-vars.ts",
    "build:js": "tsc vars.ts --declaration",
    "build:css": "sass --style=compressed dist/grid.scss dist/grid.css",
    "build": "npm run build:js & npm run build:vars & npm run copy-src & npm run build:css"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/nihlton/simple-grid.git"
  },
  "author": "greg archer <nihlton@gmail.com> (https://gregtaff.com/)",
  "license": "ISC",
  "homepage": "https://github.com/nihlton/simple-grid",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "sass": "^1.95.1",
    "sass-export": "^2.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
